<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#3F3F3F">


	<!-- Set center image + backgroud -->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="73dip" android:gravity="center"
		android:background="@drawable/bgwood">
		<ImageView android:id="@+id/handle" android:layout_width="wrap_content"
			android:layout_height="42dip" android:src="@drawable/appname"
			android:paddingBottom="20dip" android:layout_gravity="center_vertical" />
	</LinearLayout>

	<!-- Button Back -->
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="left" android:paddingTop="10dip" android:paddingLeft="5dip">
		<Button android:id="@+id/back" android:layout_width="70dip"
			android:layout_height="30dip" android:text="@string/back"
			android:textSize="12sp" android:textStyle="bold" android:textColor="#3F3F3F"
			android:background="@layout/button_wood" />
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center" android:paddingTop="60dip">
		<TableLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center_horizontal"
			android:paddingTop="10dip">
			<TableRow>
				<Button android:id="@+id/button1" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_meat" />
				<Button android:id="@+id/button2" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_fish" />
				<Button android:id="@+id/button3" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_vegetable" />
			</TableRow>
		</TableLayout>
		<TableLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center_horizontal"
			android:paddingTop="3dip">
			<TableRow>
				<Button android:id="@+id/button4" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_fruits" />
				<Button android:id="@+id/button5" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_drinks" />
				<Button android:id="@+id/button6" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_milk" />
			</TableRow>
		</TableLayout>
		<TableLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center_horizontal"
			android:paddingTop="1dip">
			<TableRow>
				<Button android:id="@+id/button7" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_other" />
				<Button android:id="@+id/button8" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_herb" />
				<Button android:id="@+id/button9" android:layout_width="90dip"
					android:layout_height="90dip" android:background="@layout/cat_basics" />
			</TableRow>
		</TableLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="bottom" android:paddingTop="10dip">
		<Button android:id="@+id/toast" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="@layout/toast"
			android:textColor="#cfD1D1" android:textSize="13sp"
			android:paddingBottom="20dip" android:layout_gravity="center_vertical" />
	</LinearLayout>
	
	</LinearLayout>

</FrameLayout>