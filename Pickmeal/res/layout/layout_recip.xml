<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#3F3F3F">


	<!-- Set center image + background -->
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="73dip" android:gravity="center"
		android:background="@drawable/bgwood">
		<ImageView android:id="@+id/handle" android:layout_width="wrap_content"
			android:layout_height="42dip" android:src="@drawable/appname"
			android:paddingBottom="20dip" android:layout_gravity="center_vertical" />
	</LinearLayout>


	<!-- Button Back -->
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="left" android:paddingTop="10dip" android:paddingLeft="5dip">
		<Button android:id="@+id/back" android:layout_width="70dip"
			android:layout_height="30dip" android:text="@string/back"
			android:textSize="12sp" android:textStyle="bold" android:textColor="#3F3F3F"
			android:background="@layout/button_wood" />
	</LinearLayout>
	
		<!-- Other Button -->
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:gravity="right" android:paddingTop="10dip"
		android:paddingRight="5dip">
		<Button android:id="@+id/action" android:layout_width="70dip"
			android:layout_height="30dip" android:text="@string/gene_btn"
			android:textSize="12sp" android:textStyle="bold" android:textColor="#3F3F3F"
			android:background="@layout/button_wood" />
	</LinearLayout>
	

	<!-- Layout recip -->
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:paddingLeft="5dip" android:paddingTop="70dip">
		<TextView android:id="@+id/title" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textColor="#FFFFFF"
			android:textStyle="bold" android:textSize="16sp" />
		<ScrollView android:id="@+id/ScrollView01"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<LinearLayout android:id="@+id/LinearLayout02"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:orientation="vertical">
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFF"
					android:text="Niveau de cuisine:" android:paddingTop="15dip"
					android:paddingBottom="6dip" />
				<ImageView android:id="@+id/levelimg"
					android:layout_width="wrap_content" android:layout_height="14dip" />
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFF"
					android:text="Coût de la recette:" android:paddingTop="6dip"
					android:paddingBottom="6dip" />
				<ImageView android:id="@+id/costimg" android:layout_width="wrap_content"
					android:layout_height="14dip" />
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFF"
					android:text="Ingrédients:" android:paddingTop="20dip"
					android:textStyle="bold" />
				<TextView android:id="@+id/ingredient"
					android:layout_width="wrap_content" android:paddingTop="10dip"
					android:layout_height="wrap_content" android:textColor="#FFFFFF" />
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:textColor="#FFFFFF"
					android:text="Recette:" android:paddingTop="20dip"
					android:textStyle="bold" />
				<TextView android:id="@+id/howto" android:layout_width="wrap_content"
					android:paddingTop="10dip" android:layout_height="wrap_content"
					android:textColor="#FFFFFF" android:textSize="15sp"/>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</FrameLayout>